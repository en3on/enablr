<div class="background-container">
  <div class="signup-container">
   <div class="signup-form">
    <h2>Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :first_name, placeholder:"First Name", autofocus: true %>
      </div>

      <div class="field">
        <%= f.text_field :last_name, placeholder:"Last Name", autofocus: true %>
      </div>

      <div class="field">
        <%= f.select :fundraiser, [['Standard User', false], ['Fundraiser', true]] %>
      </div>

      <div class="field">
        <%= f.text_field :country, placeholder:"Country", autofocus: true %>
      </div>

      <div class="field">
        <%= f.text_field :city, placeholder:"City", autofocus: true %>
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, placeholder:"Password", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder:"Password Confirmation", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Create Account" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
    <div class="signup-information-box"></div>
  </div>
</div>
