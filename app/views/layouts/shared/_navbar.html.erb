<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to root_path do %>
    <div class="btn">     
      <i class="fas fa-microchip fa-lg hover"></i>
    </div> 
  <% end %>
  <div class="navbar-nav ml-auto">
  <%= link_to "Explore", projects_path, :class => "btn" %>
    <% if user_signed_in? %>
      <% if can? :create, Project %>
        <%= link_to "Create Project", new_project_path, :class => "btn" %>
      <% end %>
      <div>
        <%= link_to 'Log out', destroy_user_session_path, :class => "btn", method: :delete %>
      </div>      
      <div class="btn current-user"> 
        Hello, <%= current_user.first_name %> 
      </div> 
      <%= link_to user_profile_path(current_user) do %>
        <div class="navbar-image-avatar">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <%= link_to 'Sign Up', new_user_registration_path, :class => "btn" %>
      <%= link_to 'Log In', new_user_session_path, :class => "btn" %>
    <% end %>
  </div>
</nav>
