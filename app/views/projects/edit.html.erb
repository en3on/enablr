<div class="edit-profile-container">
  <h1>Edit <%= @project.name %></h1>

<%= form_for(:project, url: project_path(@project), method: :patch, enctype: 'multipart/form-data') do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label :target_amount %>
    <%= f.number_field :target_amount, min: 1, step: 1 %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, ProjectCategories.categories,
      disabled: ['-- Software --', '-- Hardware --'] %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %><br>
  </div>

    <div class="actions">
      <%= f.submit 'Update' %>
    </div>
  <% end %>
</div>
